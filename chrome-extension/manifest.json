{
  "manifest_version": 3,
  "name": "OpenClaw Chrome Bridge",
  "version": "0.1.0",
  "description": "Chat bridge for OpenClaw/Clawdbot agents",
  "permissions": [
    "storage",
    "alarms",
    "sidePanel"
  ],
  "host_permissions": [
    "https://*.clawdbot.com/*",
    "wss://*.clawdbot.com/*",
    "https://localhost/*",
    "wss://localhost/*",
    "https://127.0.0.1/*",
    "wss://127.0.0.1/*",
    "http://localhost/*",
    "ws://localhost/*",
    "http://127.0.0.1/*",
    "ws://127.0.0.1/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "OpenClaw Bridge",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "side_panel": {
    "default_path": "chat.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "chat.html",
        "pairing.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
